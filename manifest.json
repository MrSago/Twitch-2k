{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.2",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["proxy", "storage"],
  "host_permissions": ["*://*.twitch.tv/*", "*://*.ttvnw.net/*"],
  "background": {
    "service_worker": "background.js"
  }
}
